<Window x:Class="_3PT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3PT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="50" CornerRadius="0" ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <DataGrid Name="PacketDataGrid" AutoGenerateColumns="True" HorizontalAlignment="Left" Height="326" ItemsSource="{Binding}" Margin="10,50,0,0" VerticalAlignment="Top" Width="772"/>
        <Rectangle x:Name="_Header" Fill="{StaticResource 3PTHeaderColour}" Height="50" VerticalAlignment="Top"/>
    </Grid>
</Window>
